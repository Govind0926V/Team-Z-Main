
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= post.title %></title>
</head>
<body>
    <h1><%= post.title %></h1>
    <p><%= post.content %></p>

    <h2>Comments:</h2>
    <ul>
        <% comments.forEach(comment => { %>
            <li>
                <strong><%= comment.userinfo.username %>:</strong> <%= comment.comment %>
                <form action="/post/<%= post._id %>/comment" method="POST">
                    <input type="hidden" name="parentId" value="<%= comment._id %>">
                    <textarea name="comment" placeholder="Reply to this comment"></textarea>
                    <button type="submit">Reply</button>
                </form>
            </li>
        <% }) %>
    </ul>

    <h2>Add a Comment:</h2>
    <form action="/post/<%=post._id %>/comment" method="POST">
        <textarea name="comment" placeholder="Write your comment here"></textarea>
        <button type="submit">Submit</button>
    </form>
</body>
</html> 